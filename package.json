{
  "name": "git-remote-sync",
  "version": "1.0.8-alpha",
  "module": "index.ts",
  "main": "index.js",
  "bin": {
    "git-remote-sync": "./index.js"
  },
  "type": "module",
  "description": "CLI application to sync git remotes across devices",
  "scripts": {
    "build-all": "bun run build && bun run build-windows",
    "build": "bun run build-cli && bun run build-server",
    "build-windows": "bun run build-windows-cli && bun run build-windows-server",
    "build-node": "bun build index.ts --outfile=index.js --outdir=./ --target=node --minify --sourcemap --banner=\"#!/usr/bin/env node\"",
    "build-cli": "bun build --target=bun-linux-x64 --compile --minify --sourcemap --bytecode index.ts --outfile artifacts/git-remote",
    "build-server": "bun build --target=bun-linux-x64 --compile --minify --sourcemap --bytecode bun-server/index.ts --outfile artifacts/git-remote-server",
    "build-windows-cli": "bun build --target=bun-windows-x64 --compile --minify --sourcemap index.ts --outfile artifacts/git-remote.exe",
    "build-windows-server": "bun build --target=bun-windows-x64 --compile --minify --sourcemap bun-server/index.ts --outfile artifacts/git-remote-server.exe",
    "server": "cd bun-server && bun run index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/lunr": "^2.3.7",
    "commander": "^14.0.2",
    "firebase": "^12.5.0",
    "inquirer": "^12.11.0",
    "lunr": "^2.3.9",
    "pocketbase": "^0.26.3",
    "simple-git": "^3.30.0",
    "typescript": "^5"
  },
  "dependencies": {
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HazzazBinFaiz/git-remote-sync.git"
  },
  "keywords": [
    "Git",
    "Remote",
    "Sync"
  ],
  "author": "Md. Hazzaz Bin Faiz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HazzazBinFaiz/git-remote-sync/issues"
  },
  "homepage": "https://github.com/HazzazBinFaiz/git-remote-sync#readme"
}
